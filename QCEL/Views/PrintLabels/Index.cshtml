@model List<QCEL.Models.EnvironmentalSample>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Samples to Create Labels</h2>

@using (Html.BeginForm("ConfirmSelection", "PrintLabels"))
{
    <div class="form-group text-right">
        <button type="submit" class="btn btn-primary">Print</button>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>Sample #</th>
            <th>Location</th>
            <th>Request Type</th>
            <th>Collection Date</th>
            <th>Type/Number of Sample</th>
            <th>Micro Test</th>
            <th>Select</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Model[i].SampleNumber</td>
                <td>@Model[i].Location</td>
                <td>@Model[i].RequestType</td>
                <td>@Model[i].CollectionDate.Value.ToString("MM/dd/yyyy")</td>
                <td>@Model[i].Type</td>
                <td>@Model[i].MicroTest</td>
                <td>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"
                                   name="SelectedSamples"
                                   value="@Model[i].Id"
                                   @if (Model.Contains(@Model[i]))
                                   {
                                       <text> checked </text>
                                   }/>
                        </label>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

