@model List<QCEL.Models.SampleLocation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sample Locations</h2>

<table id="sampleLocations" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>ID</th>
        <th>Sample Number</th>
        <th>Location</th>
        <th>MicroTest</th>
        <th>Type</th>
        <th>ProductCode</th>
        <th>Zone</th>
        <th>RequestType</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>

    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function() {
            var table = $("#sampleLocations").DataTable({
                ajax: {
                    url: "/api/SampleLocations",
                    dataSrc: ""
                },
                columns: [
                    { data: "id" },
                    {
                        data: "sampleNumber",
                        render: function(data, type, sampleLocation) {
                            return "<a href='/SampleLocations/edit/" + sampleLocation.id + "'>" + data + "</a>";
                        }
                    },
                    { data: "location" },
                    { data: "microTest" },
                    { data: "type" },
                    { data: "productCode" },
                    { data: "zone" },
                    { data: "requestType" },
                    {
                        data: "Id",
                        render: function(data) {
                            return "<button data-sampleLocation-id='" + data + " class='btn-link js-delete'>Delete</button>"
                        }
                    }
                ]
            });

            $("#sampleLocations").on("click",
                ".js-delete",
                function() {
                    var button = $(this);

                    bootbox.confirm("Are you sure you want to delete this location?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/SampleLocations/" + button.attr("data-sampleLocation-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}