@model List<QCEL.Models.SampleLocation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sample Locations</h2>

<table id="sampleLocations" class="table table-bordered table-hover">
    <tr>
        <th>Sample Number</th>
        <th>Location</th>
        <th>MicroTest</th>
        <th>Type</th>
        <th>Zone</th>
        <th>ProductCode</th>
        <th>RequestType</th>
        <th>Delete</th>
    </tr>
    @foreach (var sampleLocation in @Model)
    {
        <tr>
            <td>@sampleLocation.SampleNumber</td>
            <td>@sampleLocation.Location</td>
            <td>@sampleLocation.MicroTest</td>
            <td>@sampleLocation.Type</td>
            <td>@sampleLocation.Zone</td>
            <td>@sampleLocation.ProductCode</td>
            <td>@sampleLocation.RequestType</td>
            <td><button data-sampleLocation-id="@sampleLocation.Id" class="btn-link js-delete">Delete</button></td>
        </tr>
    }
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#sampleLocations .js-delete").on("click",
                function () {
                    var button = $(this);

                    if(confirm("Are you sure you want to delete this location?")) {
                        $.ajax({
                            url: "/api/SampleLocations/" + button.attr("data-sampleLocation-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
        });
    </script>
}