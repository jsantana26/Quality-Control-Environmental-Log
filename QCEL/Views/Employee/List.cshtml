@model List<QCEL.Models.ApplicationUser>
@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div style="display: flex; flex-direction: row; justify-content: space-between; align-items: flex-start;">
        <h2>@ViewBag.Title</h2>
        @Html.ActionLink("Add New User", "Register", "Account", routeValues: null, htmlAttributes: new { style="margin: 15px 0px 0px 0px;", @class = "btn btn-primary"})
    </div>
<table id="employees" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
        </tr>
    }
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#employees").dataTable();
        });
    </script>
}
